@model List<ValidationUsingDataAnnotation.Models.Book>

<html>
<head>
    <title>Book List</title>
    <environment include="Development" exclude="Production">
        <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    </environment>
    <environment include="Production" exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    </environment>
</head>
<body>
    <div class="container mt-4">
        <a class="btn btn-secondary mb-3" asp-route="AddBook">Add New Book</a>
        <h3>Book List</h3>
        <table class="table table-bordered table-striped">
            <thead class="table-primary">
                <tr>
                    <th>ISBN</th>
                    <th>Book Name</th>
                    <th>Author Name</th>
                    <th>Published Date</th>
                    <th>Book URL</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr class="table-success">
                        <td>@book.Isbn</td>
                        <td>@book.BookName</td>
                        <td>@book.AuthorName</td>
                        <td>@book.PublishedDate</td>
                        <td>@book.BookUrl</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>