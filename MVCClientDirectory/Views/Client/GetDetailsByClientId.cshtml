@model MVCClientDirectory.Models.ClientInfo

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Client Details</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Client Details</h2>
        <table class="table table-bordered">
            <tr><th>ClientId</th><td>@Model.ClientId</td></tr>
            <tr><th>CompanyName</th><td>@Model.CompanyName</td></tr>
            <tr><th>WebURL</th><td>@Model.WebURL</td></tr>
            <tr><th>Email</th><td>@Model.Email</td></tr>
            <tr><th>Category</th><td>@Model.Category.Replace("_", " ")</td></tr>
            <tr><th>Standard</th><td>@Model.Standard</td></tr>
        </table>
        <a asp-action="ShowAllClientDetails" class="btn btn-primary">Back</a>
    </div>
</body>
</html>
