@model MVCClientDirectory.Models.ClientInfo

@{
    ViewData["Title"] = "Add Clients";
    var categories = ViewBag.CategoryOptions as List<string>;
    var standards = ViewBag.StandardOptions as List<string>;
}

<h2 class="text-center">Add New Client</h2>

<form asp-action="AddClients" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="CompanyName">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="WebURL">Website URL</label>
        <input asp-for="WebURL" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>

    <div class="form-group">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="">-- Select Category --</option>
            @foreach (var category in categories)
            {
                <option value="@category">@category.Replace("_", " ")</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Standard">Standard</label>
        <select asp-for="Standard" class="form-control">
            <option value="">-- Select Standard --</option>
            @foreach (var standard in standards)
            {
                <option value="@standard">@standard</option>
            }
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Add Client</button>
    <a asp-action="ShowAllClientsDetails" class="btn btn-secondary ml-2">Cancel</a>
</form>
