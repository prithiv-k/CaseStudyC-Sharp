@model List<MVCContactDirectory.Model.ContactInfo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Contact List</h2>

<p>
    <a asp-action="AddContact" asp-controller="Contact">+ Add New Contact</a>
</p>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Company</th>
            <th>Email</th>
            <th>Mobile No</th>
            <th>Designation</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.ContactId</td>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.CompanyName</td>
                <td>@contact.EmailId</td>
                <td>@contact.MobileNo</td>
                <td>@contact.Designation</td>
                <td>
                    <a asp-action="GetContactById" asp-controller="Contact" asp-route-id="@contact.ContactId">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
