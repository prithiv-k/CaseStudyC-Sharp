@model List<MVCContactDirectory.Model.ContactInfo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<html>
<head>
   
    <title>Contact List</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">Contact List</h2>

        <p>
            <a class="btn btn-primary mb-3" asp-action="AddContact" asp-controller="Contact">+ Add New Contact</a>
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Company</th>
                        <th>Email</th>
                        <th>Mobile No</th>
                        <th>Designation</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr>
                            <td>@contact.ContactId</td>
                            <td>@contact.FirstName</td>
                            <td>@contact.LastName</td>
                            <td>@contact.CompanyName</td>
                            <td>@contact.EmailId</td>
                            <td>@contact.MobileNo</td>
                            <td>@contact.Designation</td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-action="GetContactById" asp-controller="Contact" asp-route-id="@contact.ContactId">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
